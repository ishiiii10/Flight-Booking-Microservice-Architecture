package com.chubb.flight.service;


import lombok.RequiredArgsConstructor;
import org.springframework.stereotype.Service;

import com.chubb.flight.dto.FlightRequest;
import com.chubb.flight.model.Airline;
import com.chubb.flight.model.Flight;
import com.chubb.flight.repository.FlightRepository;

import reactor.core.publisher.Flux;
import reactor.core.publisher.Mono;

@Service
@RequiredArgsConstructor
public class FlightService {

    private final FlightRepository flightRepository;

    /**
     * Create and save a Flight. Sets availableSeats = totalSeats.
     * Returns the saved Flight.
     */
    public Mono<Flight> addFlight(FlightRequest req) {
        Flight flight = Flight.builder()
                .airline(req.getAirline())
                .flightNumber(req.getFlightNumber())
                .source(req.getSource())
                .destination(req.getDestination())
                .departureTime(req.getDepartureTime())
                .arrivalTime(req.getArrivalTime())
                .totalSeats(req.getTotalSeats())
                .availableSeats(req.getTotalSeats()) // initialize
                .price(req.getPrice())
                .build();
        return flightRepository.save(flight);
    }

    public Flux<Flight> listAll() {
        return flightRepository.findAll();
    }

    public Flux<Flight> findByAirline(Airline airline) {
        return flightRepository.findByAirline(airline);
    }

    public Flux<Flight> searchByRoute(String source, String destination) {
        return flightRepository.findBySourceIgnoreCaseAndDestinationIgnoreCase(source, destination);
    }

    public Mono<Flight> findById(String id) {
        return flightRepository.findById(id);
    }
}